@using QLBanHang_ASP.Net.Models;
@model KhachHang

@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc;
@{
    ViewBag.Title = "CreateAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/ConTent/Login/css/stylelogin.css" rel="stylesheet" type="text/css" media="all" />

</head>
<div class=" container">
    <div class=" register">
        <h1>Đăng ký</h1>
        <b style="color:red;">@ViewBag.ThongBao</b>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true)
            <div class="col-md-6 register-top-grid">
                <h3>Thông tin người dùng</h3>
                <div>
                    <span>Họ tên</span>
                    @Html.TextBox("TenKH")
                </div>
                <div>
                    <span>Số diện thoại</span>
                    @Html.TextBox("SDT")
                </div>
                <div>
                    <span>Địa chỉ nhận hàng</span>
                    @Html.TextBox("DiaChi")
                </div>

            </div>
            <div class="col-md-6 register-bottom-grid ">
                <h3>Thông tin tài khoản</h3>

                <div>
                    <span>Mật khẩu</span>
                    @Html.Password("MatKhau")
                </div>
                <div>
                    <span>Nhập lại mật khẩu</span>
                    @Html.Password("LoaiKH")
                </div>

            </div>

            <div class="clearfix"> </div>
            <div>
                @Html.Captcha(5)
            </div>
            <hr />
            <button class="button button1">Đăng ký</button>
        }
    </div>
  
</div>
<style>
    .button1 {
        width: 30%;
    }
    #CaptchaInputText {
       
    }
        #CaptchaInputText:focus {
            outline: none;
            border-color: #9ecaed;
            box-shadow: 0 0 10px #9ecaed;
        }
    .button {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        margin: auto;
        display: block;
        border-radius: 15px
    }

        .button:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
        }
</style>
