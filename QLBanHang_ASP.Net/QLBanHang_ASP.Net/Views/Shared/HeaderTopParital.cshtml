<body>
    <div class="header" id="home">
        <div class="container">
            <ul>
                @if (Session["TaiKhoan"] != null && Session["TaiKhoan"] != "")
                {
                    KhachHang tv = (KhachHang)Session["TaiKhoan"];
                   
                    <li class="lock">Chào @tv.TenKH </li>
                    <div class="dropdown">
                        <img src="~/Content/HinhAnhSP/vd.jpg" alt="" style="height: 30px;border-radius: 50%;">
                        <div class="dropdown-content">
                            @Html.ActionLink("Đăng xuất", "DangXuat", "Login")
                            <br />
                            @if (Session["DonHang"] == null && Session["DonHang"] == "")
                            {
                                @Html.ActionLink("Đơn hàng", "DangXuat", "Login")
                            }

                            @if (Session["DonHang"] != null && Session["DonHang"] != "")
                            {
                                <a href="@Url.Action("DonDatHang","Cart")" data-toggle="modal"> Đơn hàng <sup class="supnew">new</sup> </a>
                            }
                            <br />
                            @Html.ActionLink("Tài khoản của tôi", "DangXuat", "Login")
                        </div>
                    </div>
                  
                }
                else
                {
                    <li> <a href="@Url.Action("DangNhap","Login")" data-toggle="modal"> Đăng nhập </a></li>
                    <li> <a href="@Url.Action("CreateAccount","Login")" data-toggle="modal"> Đăng ký </a></li>
                }

                <li><i class="fa fa-phone" aria-hidden="true"></i> Call : 0327878264</li>
                <li><i class="fa fa-envelope-o" aria-hidden="true"></i> <a href="mailto:info@example.com">huynhvanbinh1606@gmail.com</a></li>
            </ul>
        </div>
    </div>
    <div class="header-bot">
